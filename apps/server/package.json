{
	"name": "server",
	"version": "1.0.0",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"dev": "prisma generate && prisma db seed && nodemon index.ts",
		"start": "node dist/index.js",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix --quiet",
		"docker:up": "docker compose up --wait",
		"docker:down": "docker compose down",
		"test": "pnpm docker:up && dotenv -e .env.test -- prisma migrate deploy && vitest run --coverage && pnpm docker:down",
		"test:ui": "vitest --ui",
		"test:run": "vitest run"
	},
	"prisma": {
		"seed": "node --loader ts-node/esm prisma/seed.ts"
	},
	"nodemonConfig": {
		"execMap": {
			"ts": "node --loader ts-node/esm"
		}
	},
	"dependencies": {
		"@fastify/cookie": "^8.3.0",
		"@fastify/cors": "^8.2.1",
		"@fastify/env": "^4.2.0",
		"@fastify/multipart": "^7.6.0",
		"@fastify/sensible": "^5.2.0",
		"@fastify/session": "^10.2.1",
		"@fastify/swagger": "^8.3.1",
		"@fastify/swagger-ui": "^1.8.0",
		"@fastify/type-provider-typebox": "^3.0.0",
		"@prisma/client": "^4.12.0",
		"@supabase/supabase-js": "^2.20.0",
		"bcryptjs": "^2.4.3",
		"fastify": "^4.15.0",
		"fastify-plugin": "^4.5.0",
		"ms": "^2.1.3"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/ms": "^0.7.31",
		"@types/node": "^18.7.14",
		"@types/supertest": "^2.0.12",
		"dotenv-cli": "^7.2.1",
		"eslint-config-custom": "workspace:*",
		"nodemon": "^2.0.22",
		"prisma": "^4.12.0",
		"supertest": "^6.3.3",
		"ts-node": "^10.9.1",
		"tsconfig": "workspace:*"
	}
}
